<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/tree_id"
                style="@style/custom_edit_text_style"
                app:input_type="number"
                app:left_text="古树编号"
                app:mid_text_hint="古树编号（标准GB/T 2260）"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/tch"
                style="@style/custom_edit_text_style"
                app:left_text="调查号"
                app:mid_text_hint="调查号"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/tcr"
                style="@style/custom_edit_text_style"
                app:left_text="调查人"
                app:mid_text_hint="调查人"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/research_date"
                style="@style/custom_edit_text_style"
                app:left_text="调查日期"
                app:mid_text_hint="调查日期"
                app:mid_type="read"/>


            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/region"
                style="@style/custom_edit_text_style"
                app:left_text="地区信息"
                app:mid_font_color="@color/wx_green"
                app:mid_text_hint="省市县"
                app:mid_type="read"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/detail_address"
                style="@style/custom_edit_text_style"
                app:left_text="详细信息"
                app:mid_text_hint="[乡镇][村]街道"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/cname"
                style="@style/custom_edit_text_style"
                app:left_text="中文名"
                app:mid_font_color="@color/wx_green"
                app:mid_text_hint="中文名称"
                app:mid_type="read"/>

            <!-- <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                 android:id="@+id/special_code"
                 style="@style/custom_edit_text_style"
                 app:left_text="树种代码"
                 app:mid_text_hint="树种代码"/>-->

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/alias"
                style="@style/custom_edit_text_style"
                app:left_text="别名"
                app:mid_text_hint="别名"/>

            <!--  <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                 android:id="@+id/latin"
                 style="@style/custom_edit_text_style"
                 app:left_text="拉丁名"
                 app:mid_text_hint="拉丁名"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                 android:id="@+id/family"
                 style="@style/custom_edit_text_style"
                 app:left_text="科"
                 app:mid_text_hint="科"/>

             <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                 android:id="@+id/belong"
                 style="@style/custom_edit_text_style"
                 app:left_text="属"
                 app:mid_text_hint="属"/>-->

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/height"
                style="@style/custom_edit_text_style"
                app:input_type="decimal"
                app:left_text="高度"
                app:mid_text_hint="古树高度（米）"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/dbh"
                style="@style/custom_edit_text_style"
                app:input_type="decimal"
                app:left_text="胸径"
                app:mid_text_hint="胸径（厘米）"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/age"
                style="@style/custom_edit_text_style"
                app:input_type="decimal"
                app:left_text="树龄"
                app:mid_text_hint="树龄（年）"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/crownEW"
                style="@style/custom_edit_text_style"
                app:input_type="decimal"
                app:left_text="东西冠幅"
                app:mid_text_hint="东西冠幅（米）"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/crownNS"
                style="@style/custom_edit_text_style"
                app:input_type="decimal"
                app:left_text="南北冠幅"
                app:mid_text_hint="南北冠幅（米）"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/growth"
                style="@style/custom_edit_text_style"
                app:left_text="生长势"
                app:mid_font_color="@color/wx_green"
                app:mid_text_hint="生长势"
                app:mid_type="read"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/environment"
                style="@style/custom_edit_text_style"
                app:left_text="生长环境"
                app:mid_font_color="@color/wx_green"
                app:mid_text_hint="生长环境"
                app:mid_type="read"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/status"
                style="@style/custom_edit_text_style"
                app:left_text="状况"
                app:mid_font_color="@color/wx_green"
                app:mid_text_hint="生长状况"
                app:mid_type="read"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/special"
                style="@style/custom_edit_text_style"
                app:left_text="散生群状"
                app:mid_font_color="@color/wx_green"
                app:mid_text_hint="散生群状"
                app:mid_type="read"/>

            <com.xabaizhong.treemonistor.myview.C_info_gather_item1
                android:id="@+id/gsbz"
                style="@style/custom_edit_text_style"
