<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.xabaizhong.treemonistor">

    <!-- 网络 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 存储 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@mipmap/rose"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.Activity_main"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".activity.Activity_add_manage"
            android:label="addTreeManger"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.Activity_add_tree"
            android:label="tree_add"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.Activity_query"
            android:label="query"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.Activity_monitor"
            android:label="monitor"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.Activity_detailInfo"
            android:label="tree-detail"
            android:screenOrientation="portrait"/>
        <activity
            android:name="me.nereo.multi_image_selector.MultiImageSelectorActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/image_selector"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.Activity_login"
            android:label="login"
            android:screenOrientation="portrait"/>
        <activity
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:name=".activity.Activity_welcome"
            android:label="monitor"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
    </application>

</manifest>